CREATE TABLE users (id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, username TEXT NOT NULL, hash TEXT NOT NULL);
CREATE UNIQUE INDEX username ON users (username);
CREATE TABLE budget_total (user_id INTEGER NOT NULL, total_cost INTEGER NOT NULL);
CREATE TABLE budget_history (id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL, user_id INTEGER NOT NULL, category TEXT NOT NULL, amount INTEGER NOT NULL, description TEXT, date DATE NOT NULL);